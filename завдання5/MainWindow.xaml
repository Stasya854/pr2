<Window x:Class="Snowfall3D.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Snowfall 3D" Height="500" Width="500" Loaded="Window_Loaded">
    <Grid>
        <Viewport3D Name="MyViewport3D" ClipToBounds="True">
            <Viewport3D.Camera>
                <PerspectiveCamera Position="0,0,5" LookDirection="0,0,-1" FieldOfView="60"/>
            </Viewport3D.Camera>

            <ModelVisual3D>
                <ModelVisual3D.Content>
                    <DirectionalLight Color="White" Direction="-1,-1,-1"/>
                </ModelVisual3D.Content>
            </ModelVisual3D>

            <ModelVisual3D x:Name="SnowflakeModel" />
        </Viewport3D>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
            <Button Content="Start" Click="StartAnimation" Width="75" Margin="5"/>
            <Button Content="Stop" Click="StopAnimation" Width="75" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
