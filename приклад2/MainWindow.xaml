<Window x:Class="My3DApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="3D Scene" Height="450" Width="800"
        Loaded="Window_Loaded">
    <Grid>
        <Viewport3D ClipToBounds="True" Width="300" Margin="102,0,102,71">
            <Viewport3D.Camera>
                <PerspectiveCamera Position="0,0,3" LookDirection="0,0,-1" FieldOfView="45"/>
            </Viewport3D.Camera>
            <Viewport3D.Children>
                <!-- Освітлення -->
                <ModelVisual3D>
                    <ModelVisual3D.Content>
                        <DirectionalLight Color="White" Direction="-1,-1,-1"/>
                    </ModelVisual3D.Content>
                </ModelVisual3D>

                <!-- Перша 3D модель -->
                <ModelVisual3D x:Name="MyModel">
                    <ModelVisual3D.Content>
                        <GeometryModel3D>
                            <!-- Геометрія -->
                            <GeometryModel3D.Geometry>
                                <MeshGeometry3D
                                    Positions="-0.2,-0.2,0.1  0.2,-0.2,0.1  0.2,0.2,0.1  -0.2,0.2,0.1"
                                    TriangleIndices="0,1,2  2,3,0"/>
                            </GeometryModel3D.Geometry>
                            <!-- Матеріал -->
                            <GeometryModel3D.Material>
                                <DiffuseMaterial Brush="Orange"/>
                            </GeometryModel3D.Material>
                            <!-- Колір зворотної сторони -->
                            <GeometryModel3D.BackMaterial>
                                <DiffuseMaterial Brush="Purple"/>
                            </GeometryModel3D.BackMaterial>
                            <!-- Переміщення -->
                            <GeometryModel3D.Transform>
                                <TranslateTransform3D OffsetX="-0.5"/>
                            </GeometryModel3D.Transform>
                        </GeometryModel3D>
                    </ModelVisual3D.Content>
                </ModelVisual3D>

                <!-- Друга 3D модель -->
                <ModelVisual3D x:Name="MyModel2">
                    <ModelVisual3D.Content>
                        <GeometryModel3D>
                            <!-- Геометрія -->
                            <GeometryModel3D.Geometry>
                                <MeshGeometry3D
                                    Positions="-0.3,-0.3,0.2  0.3,-0.3,0.2  0.3,0.3,0.2  -0.3,0.3,0.2"
                                    TriangleIndices="0,1,2  2,3,0"/>
                            </GeometryModel3D.Geometry>
                            <!-- Матеріал -->
                            <GeometryModel3D.Material>
                                <DiffuseMaterial Brush="Turquoise"/>
                            </GeometryModel3D.Material>
                            <!-- Колір зворотної сторони -->
                            <GeometryModel3D.BackMaterial>
                                <DiffuseMaterial Brush="Pink"/>
                            </GeometryModel3D.BackMaterial>
                            <!-- Переміщення -->
                            <GeometryModel3D.Transform>
                                <TranslateTransform3D OffsetX="0.5"/>
                            </GeometryModel3D.Transform>
                        </GeometryModel3D>
                    </ModelVisual3D.Content>
                </ModelVisual3D>
            </Viewport3D.Children>
        </Viewport3D>

        <!-- Кнопки керування -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Button Width="80" Height="30" Content="Старт" Click="button1_Click" Margin="5"/>
            <Button Width="80" Height="30" Content="Стоп" Click="button2_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
